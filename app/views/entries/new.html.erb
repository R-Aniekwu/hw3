<h1>New Post</h1>

<%= form_with :model => @entry do |form| %>
  <h2><p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p></h2>
  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>
  <p>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.hidden_field "place_id" %>
    <%= form.submit %>
  </p>
<% end %>
